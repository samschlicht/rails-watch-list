<h1><%= @list.name %></h1>
<%= link_to "Add to this List", new_list_bookmark_path(@list), class: "mt-3 btn btn-primary" %>
<div class="row">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-4 my-3">
      <div class="card">
        <%= image_tag bookmark.movie.poster_url, width: 100, class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.movie.overview %><p>
<!--          TODO: add rating with favicons-->
          <div><p>You wrote: <em>"<%= bookmark.comment %>"</em></p></div>
          <%= link_to 'Delete', delete_bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
